<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.G10_Hamburgueria"
    tools:context=".Menu">

    <TextView
        android:id="@+id/bem_vindo_n"
        android:layout_width="257dp"
        android:layout_height="19dp"
        app:layout_constraintTop_toTopOf="parent"  app:layout_constraintStart_toStartOf="parent"  android:layout_marginLeft="67dp"
        android:layout_marginTop="169dp"
        android:gravity="center_horizontal|top"
        android:text="Bem-vindo à nossa hamburgueria!"
        android:textAppearance="@style/bem_vindo" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="79dp"
        android:layout_height="78.97dp"
        app:layout_constraintTop_toTopOf="parent"  app:layout_constraintStart_toStartOf="parent"  android:layout_marginLeft="31dp"
        android:layout_marginTop="46dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/btnVoltar"
        android:layout_width="40dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toTopOf="parent"  app:layout_constraintStart_toStartOf="parent"  android:layout_marginLeft="289dp"
        android:layout_marginTop="66dp"
        android:src="@drawable/logout"/>

    <ImageView
        android:id="@+id/btnCardapio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cardapio"
        android:text="Cardápio"
        app:layout_constraintBottom_toTopOf="@id/btnCarrinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bem_vindo_n" />

    <ImageView
        android:id="@+id/btnCarrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:src="@drawable/historico"
        android:text="Carrinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCardapio" />

</androidx.constraintlayout.widget.ConstraintLayout>

